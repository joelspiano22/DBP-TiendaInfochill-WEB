<head>
    <link rel="stylesheet" href="~/css/Formulario.css" />
</head>
<h1>EDITAR USUARIO</h1>
<html>
<body>
    <form asp-controller="Usuario" asp-action="EditDetails" method="post">
        <!--ID-->
        <div class="form-group">
            <label for="formGroupExampleInput">Id</label>
            <input asp-for="IdUsu" class="form-control" id="formGroupExampleInput" placeholder="Codigo Cliente">
            <span asp-validation-for="IdUsu" class="text-danger"></span>
        </div>
        <!--Contraseña-->
        <div class="form-group">
            <label for="formGroupExampleInput2">Contraseña</label>
            <input asp-for="ContraUsu" class="form-control" id="formGroupExampleInput2" placeholder="Contraseña">
            <span asp-validation-for="ContraUsu" class="text-danger"></span>
        </div>
        
        <!--BOTON-->
        <div class="form-group">
            <button type="submit" class="btn btn-primary" value="btn" name="editar" data-toggle="modal" data-target="#exampleModal">Modificar</button>
        </div>

    </form>


</body>
</html>
