@model IEnumerable<ProyectoDBP_TIENDA.Models.TemporalVenta>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    //List<TemporalVenta> lst = List<TemporalVenta>("carrito");
    List<int> canti = new List<int>();
}
<html>
<head>
    <link rel="stylesheet" href="~/css/Tablas.css" />
</head>
<body>
    <h1>Productos Agregados al Carrito</h1>
    <table class="table table-hover">
        <thead>
            <tr>
                <td scope="col">Codigo</td>
                <td scope="col">Descripcion</td>
                <td scope="col">Precio</td>
                <td scope="col">Stock</td>
                <td scope="col">Cantidad seleccionada</td>
                <td scope="col">Editar</td>
                <td scope="col">Eliminar</td>
            </tr>
        </thead>
        <tbody id="myTable">

                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.IdPro</td>
                        <td>@item.DesPro</td>
                        <td>@item.PrePro</td>
                        <td>@item.StkAct</td>
                        <td>@item.cantidad</td>
                    <td><a asp-action="Edit" asp-route-id="@item.IdPro" class="btn btn-primary m-2">Editar</a></td>
                    <td><a asp-action="Delete" asp-route-id="@item.IdPro" class="btn btn-primary m-2">Eliminar</a></td>
                </tr>
                }
        </tbody>
    </table>
    <a asp-action="Operacion" class="btn btn-primary m-2">Pagar</a>

</body>
</html>
