@model IEnumerable<ProyectoDBP_TIENDA.Models.TbProducto>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<!DOCTYPE html>
<html lang="en">
<head>
    
    <title>TIENDITA UCHILL</title>
    @*<link rel="stylesheet" href="HomeStyle.css">*@
    <link rel="stylesheet" type="text/css" href="~/css/ProductoPrincipal.css" >
    
</head>
<body>
    <header>

        <div class="logo">
            <img src="/css/uchillLogo.jpeg" width="150">
        </div>

        

        <nav>
            <div class="menu">
                <h1 class="display-4 fw-bolder">TIENDITA UCHILL</h1>
                <p class="lead fw-normal">Disfruta mientras luchas contra el ciclo!</p>

                <form class="carrito" action="/TemporalVenta/VerCarrito" method="get">
                    <button class="btn btn-outline-dark" type="submit">
                        <i class="bi-cart-fill me-1">Carrito</i>
                        
                        <span class="badge bg-dark text-white ms-1 rounded-pill"></span>
                    </button>
                </form>

            </div>
        </nav>
    </header>

    <div class="contenido" id="myTable">

    <!-- Header-->
                
    <!-- Bootstrap core JS-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Core theme JS-->
    <script src="~/js/scripts1.js"></script>

        <h2>
            Buscar<input class="form-control" id="myInput" type="text" placeholder="Search..." />
        </h2>

        <div class="card-deck" id="myTable">
            @foreach (var item in Model)
            {
                <div class="card m-4" style="min-width:auto;max-width:30.5%">
                    <div class="card-header">
                        <h3>Descripcion: @item.DesPro</h3>
                        <h3>Precio: @item.PrePro</h3>
                        <h3>Stock: @item.StkAct</h3>

                        @{
                            // Construir la ruta de la imagen en la carpeta wwwroot/img
                            var imagePath = $"~/img/{item.DesPro}.jpg";
                        }
                        <img src="@Url.Content(imagePath)" alt="@item.DesPro" width="120" />
                    </div>
                    <div class="card-footer text-center">
                        <a asp-action="Comprar" asp-route-id="@item.IdPro" class="btn btn-primary m-2">Comprar</a>
                    </div>
                </div>
            }
        </div>

    </div>
</body>

<footer>
    <div>
        <a href="/Nosotros">Nosotros</a>
        <a href="/TerminosYCondiciones">Términos y Condiciones</a>
    </div>
    <div>
        <a href="https://w.app/LPWehf">
            <img src="/css/WhatsApp.png" alt="WhatsApp">
        </a>
    </div>
</footer>
</html>


<script>
    $(document).ready(function () {
        $("#myInput").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#myTable tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });
    });
</script>