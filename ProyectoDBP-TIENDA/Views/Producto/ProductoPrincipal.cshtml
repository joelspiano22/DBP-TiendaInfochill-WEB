@{
}

<!DOCTYPE html>
<html lang="en">
<head>
    
    <title>TIENDITA UCHILL</title>
    <link rel="stylesheet" href="HomeStyle.css">
    <link rel="stylesheet" type="text/css" href="~/css/ProductoPrincipal.css" >
    
</head>
<body>
    <header>
        <div class="logo">
            <img src="/css/uchillLogo.jpeg" width="150">
        </div>

        <nav>
            <div class="menu">
                <a href="Home.html" class="linkNav">Home </a>

                <a href="QuienSomos.html" class="linkNav">Quien Somos </a>

                <h1 class="display-4 fw-bolder">TIENDITA UCHILL</h1>
                <p class="lead fw-normal">Disfruta mientras luchas contra el ciclo!</p>

                <form class="carrito" action="/TemporalVenta/VerCarrito" method="get">
                    <button class="btn btn-outline-dark" type="submit">
                        <i class="bi-cart-fill me-1"></i>
                        Carrito
                        <span class="badge bg-dark text-white ms-1 rounded-pill">0</span>
                    </button>
                </form>

            </div>
        </nav>
    </header>

    <div class="contenido">

        
    <div class="busquedita">
        <input class="form-control" id="myInput" type="text" placeholder="Ingrese el termino a buscar..." />
    </div>
    <!-- Header-->
                
    <!-- Bootstrap core JS-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Core theme JS-->
    <script src="~/js/scripts1.js"></script>
    <div class="card-deck">
        @foreach (var item in Model)
        {
            <div class="card m-4" style="min-width:auto;max-width:30.5%">
                <div class="card-header">
                    <h3>@item.DesPro</h3>
                    <h3>@item.PrePro</h3>
                    <h3>@item.StkAct</h3>
                </div>
                <div class="card-footer text-center">
                    <a asp-action="Comprar" asp-route-id="@item.IdPro" class="btn btn-primary m-2">Comprar</a>
                </div>
            </div>
        }
    </div>
    </div>
</body>
</html>

<script>
    $(document).ready(function () {
        $("#myInput").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#myTable tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });
    });
</script>