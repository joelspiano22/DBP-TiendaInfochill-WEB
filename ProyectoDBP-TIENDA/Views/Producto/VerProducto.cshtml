@model ProyectoDBP_TIENDA.Models.TemporalVenta
<html>
<head>

</head>
<body>
    <form asp-controller="TemporalVenta" asp-action="Index" method="post">
        <input asp-for="IdPro" type="hidden" class="form-control" value="@ViewData["Id"]"/>
        <label for="formGroupExampleInput">Descripcion</label>
        <input asp-for="DesPro" type="text" class="form-control" placeholder="Descripcion del producto" value="@ViewData["descripcion"]"/>
        <label for="formGroupExampleInput">Precio</label>
        <input asp-for="PrePro" type="text" class="form-control" placeholder="Precio del producto" value="@ViewData["precio"]" />
        <label for="formGroupExampleInput">Stock</label>
        <input asp-for="StkAct" type="number" class="form-control" placeholder="Precio del producto" value="@ViewData["stock"]" />
        <label for="formGroupExampleInput">Cantidad</label>
        <input asp-for="cantidad" type="number" class="form-control" placeholder="Cantidad de productos" />
        <input type="submit" class="btn btn-primary" value="Agregar al carrito" />
    </form>
</body>
</html>